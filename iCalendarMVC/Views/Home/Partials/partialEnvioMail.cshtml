@model iCalendarMVC.Models.vmEnvioMail


<div class="col-md-12">
    @if (Model.Transaccion != null)
    {
        <div class="col-md-12">
            <div class="alert alert-@(Model.Transaccion.Exitoso ? "success" : "danger")">
                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                @Model.Transaccion.Mensaje
            </div>
        </div>
    }


    @using (Ajax.BeginForm("partialEnvioMail", "Home",
                                    new AjaxOptions
                                    {
                                        InsertionMode = InsertionMode.Replace,
                                        UpdateTargetId = "divPartialTransaccion",
                                        LoadingElementId = "loader",
                                        //OnSuccess = "$('#PopUpBorrardoIdioma').modal('hide'); CargarDT();"
                                    }))
    {
        <div class="modal-body">
            <form role="form">

               
                <div class="form-group">
                    @Html.LabelFor(x => x.EnvioMail.TituloMail)
                    @Html.TextBoxFor(x => x.EnvioMail.TituloMail, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.EnvioMail.TituloMail)
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.EnvioMail.HoraYFechaCalendario)
                    @Html.TextBoxFor(x => x.EnvioMail.HoraYFechaCalendario, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.EnvioMail.HoraYFechaCalendario)
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.EnvioMail.UsuarioDestino)
                    @Html.TextBoxFor(x => x.EnvioMail.UsuarioDestino, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.EnvioMail.UsuarioDestino)
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.EnvioMail.CorreoDestino)
                    @Html.TextBoxFor(x => x.EnvioMail.CorreoDestino, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.EnvioMail.CorreoDestino)
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-lg btn-primary">Enviar</button>
                </div>
            </form>
        </div>
    }
</div>

